server {
    listen 80;
    server_name ysyproject.com;

    if ($host = ysyproject.com ) {
		return 301 https://$host$request_uri;
	}
	return 404;
}

server {
    listen 80;
    server_name backend.ysyproject.com;

    if ($host = backend.ysyproject.com) {
		return 301 https://$host$request_uri;
	}
	return 404;
}



server {
        # SSL configuration
        
        listen 443 ssl http2 default_server;
        listen [::]:443 ssl http2 default_server;
        client_max_body_size 10M;
        
        ssl_certificate "/etc/letsencrypt/live/www.ysyproject.com/fullchain.pem";
        ssl_certificate_key "/etc/letsencrypt/live/www.ysyproject.com/privkey.pem";
        ssl_dhparam "/etc/nginx/ssl/dhparams.pem";
        add_header Strict-Transport-Security "max-age=31536000";
        server_name ysyproject.com;

        location / {

				root /home/ec2-user/frontend/dist;
				index index.html index.htm;
				try_files $uri $uri/ /index.html;
                proxy_set_header Host $host;
                proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
                proxy_set_header X-Forwarded-Proto $scheme;
                proxy_set_header Upgrade $http_upgrade;
                proxy_set_header Connection "upgrade";
                proxy_set_header X-Real-IP $remote_addr;
                proxy_pass https://localhost:3000;
        }
}

server {
        # SSL configuration
#
        listen 443 ssl http2;
        listen [::]:443 ssl http2 ;
        client_max_body_size 10M;
        ssl_certificate "/etc/letsencrypt/live/www.ysyproject.com/fullchain.pem";
        ssl_certificate_key "/etc/letsencrypt/live/www.ysyproject.com/privkey.pem";
        ssl_dhparam "/etc/nginx/ssl/dhparams.pem";

        server_name backend.ysyproject.com;
        location  api {
                proxy_set_header Host $host;
                proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
                proxy_set_header X-Forwarded-Proto $scheme;
                proxy_set_header Upgrade $http_upgrade;
                proxy_set_header Connection "upgrade";
                proxy_set_header X-Real-IP $remote_addr;
                proxy_pass http://mywebserv.site:8000;
        }

}
